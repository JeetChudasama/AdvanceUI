<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RefineScreen">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/MidnightBlue"
        android:gravity="center"
        android:text="Refine Screen"
        android:textColor="@color/White"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textview"
        android:layout_margin="@dimen/_16sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your Availability"
            android:textSize="@dimen/_13ssp" />

        <Spinner
            android:id="@+id/select_avail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/header_bar"
            android:paddingEnd="@dimen/_60sdp"/>

        <TextView
            android:id="@+id/textView_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Your Status"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/Status_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:background="@drawable/bg"
            android:textSize="@dimen/_10ssp"
            android:inputType="textMultiLine"
            android:minHeight="@dimen/_50sdp"
            android:gravity="top|left"
            android:padding="@dimen/_5sdp"
            android:maxLength="250"/>

        <TextView
            android:id="@+id/charCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/250"
            android:layout_gravity="end"/>

        <TextView
            android:id="@+id/textView_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Hyper Local Distance"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="1"
            android:valueTo="100"
            android:value="50"
            app:trackColorActive="@color/DarkBlue"
            app:tickVisible="true"
            app:thumbColor="@color/DarkBlue"
            app:labelStyle="@style/tooltip"
            app:labelBehavior="withinBounds"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:text="1 Km"
                android:paddingStart="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="100 Km"
                android:gravity="end"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView_Purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Purpose"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/coffee"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="coffee"
                android:textColor="@color/Black"
                android:background="@drawable/check_bg"
                android:textSize="@dimen/_10ssp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/business"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="business"
                android:textColor="@color/Black"
                android:background="@drawable/check_bg"
                android:textSize="@dimen/_10ssp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/hobbies"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="hobbies"
                android:textColor="@color/Black"
                android:background="@drawable/check_bg"
                android:textSize="@dimen/_10ssp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fdship"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="friendship"
                android:textColor="@color/Black"
                android:background="@drawable/check_bg"
                android:textSize="@dimen/_10ssp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/movies"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="movies"
                android:textColor="@color/Black"
                android:background="@drawable/check_bg"
                android:textSize="@dimen/_10ssp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dinning"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="dinning"
                android:textColor="@color/Black"
                android:background="@drawable/check_bg"
                android:textSize="@dimen/_10ssp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dating"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="dating"
                android:textColor="@color/Black"
                android:background="@drawable/check_bg"
                android:textSize="@dimen/_10ssp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/matrimony"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="matrimony"
                android:textColor="@color/Black"
                android:background="@drawable/check_bg"
                android:textSize="@dimen/_10ssp"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveBtn"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/sve"
            android:textColor="@color/White"
            android:background="@drawable/checked_bg"
            android:textSize="@dimen/_10ssp"
            android:layout_gravity="center"/>

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>